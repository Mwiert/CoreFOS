@using CFOS.EntityLayer.Concretes;
@model List<Calisanlar>
@{
    ViewData["Title"] = "Yetkiliislem";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div class="row">
    <div class="card">
                  <div class="col-lg-12 stretch-card">
                <div class="table-responsive card">
                  <div class="card-body">
                    <h4 class="card-title text-center">Yetkili Listesi</h4>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th> Çalışan Id </th>
                          <th> Çalışan Adı </th>
                          <th> Çalışan Soyadı</th>
                          <th> Çalışan E-Postası </th>
                          <th> Çalışan Telefon No </th>
                          <th> İşlem </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var item in (List<Calisanlar>)ViewBag.CalisanList)
                        {
                        <tr class="table-info">
                          <td> @item.CalisanId </td>
                          <td> @item.CalisanBiglileri.UserAd </td>
                          <td> @item.CalisanBiglileri.UserSoyad </td>
                          <td> @item.CalisanBiglileri.UserEmail</td>  
                          <td> @item.CalisanBiglileri.UserPhoneNumber</td>  
                          <td><a style="text-decoration:none" class="badge badge-danger" href="/Admin/DeleteCalisan/@item.CalisanId" > Yetkili Sil</a></td>
                        </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                </div>
                </div>
                </div>
                <div class="card">
                  <div class="table-responsive card-body">
                    <div class="card-body">
                    <h4 class="card-title text-center">Üye Listesi</h4>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th> Üye Id </th>
                          <th> Üye Adı </th>
                          <th> Üye Soyadı</th>
                          <th> Üye E-Postası </th>
                          <th> Üye Telefon No </th>
                          <th>İşlem</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var item in (List<Customer>)ViewBag.CustomerList)
                        {
                        <tr class="table-info">
                          <td>@item.UserId</td>
                          <td> @item.UserAd </td>
                          <td> @item.UserSoyad </td>
                          <td> @item.UserEmail</td>  
                          <td> @item.UserPhoneNumber</td>  
                          <td><a style="text-decoration:none" class="badge badge-danger" href="/Admin/Yetkiliislem/@item.UserId" > Yetkili Ekle</a></td>
                        </tr>
                        }
                      </tbody>
                    </table>
                   </div>
                 </div>
              </div>
