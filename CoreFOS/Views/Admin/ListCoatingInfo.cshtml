@using CFOS.EntityLayer.Concretes;
@model List<CoatingInfo>
@{
    ViewData["Title"] = "ListCoatingInfo";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}



<div class="col-lg-12 stretch-card">
                <div class="table-responsive card">
                  <div class="card-body">
                    <h4 class="card-title text-center">Kaplama Listesi</h4>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th> Kaplama No </th>
                          <th> Kaplama Adı </th>
                          <th> Kaplama Sevk Tarihi </th>
                          <th> Kaplama Teslim Tarihi </th>
                          <th> İşlem</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var item in (List<CoatingInfo>)ViewBag.CoatingInfoList)
                        {
                        <tr class="table-info">
                            <td>@item.KaplamaNo</td>
                            <td>@item.KaplamaAdi</td>
                            <td>@item.SevkTarihi</td>
                            <td>@item.TeslimTarihi </td>
                           <td>
                              <a style="text-decoration:none" class="badge badge-danger" href="/Admin/DeleteCoatingInfo/@item.KaplamaNo" > Kaplama Sil</a>
                          </td>
                        </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                  <a style="text-decoration:none; width:50%;margin:0 auto;" class="btn-gradient-primary btn-lg text-center" href="/Admin/AddCoatingInfo/" > Kaplama Ekle</a>
                 </div>
                   
              </div>
            